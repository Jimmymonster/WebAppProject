@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="login.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>

    <h2>LOGIN</h2>

    <form asp-action="login" asp-controller="UserController" method="post">
        <div class="container">
            <input class="name" type="text" placeholder="Username" name="Username">

            <hr>
            <input class="pass" type="password" placeholder="Password" name="Password">

            <button class="login" type="submit">Login</button>
            <div style="color:red">Login Failed</div> <!-- This is temporary -->
        </div>
    </form>

    <div class="bigCir"></div>
    <div class="smallCir"></div>

    <div class="tri1"></div>
    <div class="tri2"></div>
    <div class="tri3"></div>

    <div class="cirLine"></div>
    <div class="transLine1"></div>
    <div class="transLine2"></div>
    <div class="transLine3"></div>

</body>
