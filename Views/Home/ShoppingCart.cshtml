        .foodCard {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
        }

        img {
            height: 85%;
            width: 16%;
            border-radius: 10px;
            left: 20px;
            object-fit: cover;
            object-position: center;
        }

        .foodName {
            font-size: 8vh;
            left: 3vw;
        }

        .cost {
            position: absolute;
            font-size: 8vh;
            right: 8vw;
        }

        .removeOrder {
            position: absolute;
            right: 2vw;
            margin: 0px;
            padding: 1.1vh 1.5vh;
            font-size: 2.5vh;
            background-color: indianred;
            border-radius: 5px;
            border: none;
        }

            .removeOrder:hover {
                background-color: crimson;
                cursor: pointer;
            }

            .removeOrder:active {
                background-color: indianred;
            }

        .line {
            width: 70%;
            height: 2px;
            background-color: lightgray;
            margin: 5px auto 5px auto;
        }

        .detailSubmitRow {
            display: flex;
            justify-content: space-between;
            width: 80vw;
