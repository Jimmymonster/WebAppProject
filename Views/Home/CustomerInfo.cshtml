<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="~/css/navbar.css" rel="stylesheet" />

    <!-- For using font family -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anuphan:wght@200;500&display=swap" rel="stylesheet">

    <!-- Google material -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        h1 {
            text-align: center;
            margin-bottom: 1vh;
        }

        .foodList {
            width: 80vw;
            height: 50vh;
            margin-left: 10vw;
            margin-top: 20px;
            background-color: rgb(255, 249, 243);
            overflow: auto;
        }

            .foodList::-webkit-scrollbar {
                width: 10px;
            }

            .foodList::-webkit-scrollbar-track {
                background-color: transparent;
            }

            .foodList::-webkit-scrollbar-thumb {
                background: #ffdbae;
                border-radius: 10px;
            }

                .foodList::-webkit-scrollbar-thumb:hover {
                    background: #ffbd6c;
                }

        .foodCard {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
        }

        img {
            height: 85%;
            width: 16%;
            border-radius: 10px;
            left: 20px;
            object-fit: cover;
            object-position: center;
        }

        .resName {
            position: absolute;
            font-size: 7vh;
            left: 300px;
        }

        .foodName {
            position: absolute;
            font-size: 7vh;
            left: 30vw;
        }

        .cost {
            position: absolute;
            font-size: 7vh;
            right: 2vw;
        }

        .line {
            width: 70%;
            height: 2px;
            background-color: lightgray;
            margin: 5px auto 5px auto;
        }

        .detailSubmitRow {
            display: flex;
            justify-content: space-between;
            width: 80vw;
            height: 30vh;
            margin-left: 10vw;
            margin-top: 20px;
        }

        .row {
            display: flex;
            width: 500px;
        }

        .deHead {
            font-size: 50px;
            width: 500px;
        }

        .formHeader {
            font-size: 30px;
            padding: 15px 0px 15px 0px;
        }

        .text {
            font-size: 30px;
            width: 200px;
            padding: 15px 0px 15px 0px;
        }

        .total {
            font-size: 40px;
            margin-top: 7vh;
            left: 50px;
            padding-bottom: 20px;
        }

        .submit {
            width: 300px;
            height: 100px;
            margin: auto;
            padding-right: 10px;
            font-size: 50px;
            background-color: lightgreen;
            border: 2px solid darkslategray;
            border-radius: 10px;
            color: darkslategray;
        }

            .submit:hover {
                background-color: limegreen;
                cursor: pointer;
            }

            .submit:active {
                background-color: lightgreen;
            }

        .send {
            font-size: 50px !important;
        }

        .disabled {
            pointer-events: none;
            opacity: 1;
        }

    </style>
    <title>Order Detail</title>
</head>

<body>
    <div class="container">

        <ul>
            @*<li style="float: left;">
                <a href="login.html">
                    <span class="material-symbols-rounded logoutChange">
                        logout
                    </span> ออกจากระบบ
                </a>
            </li>*@
            <li style="float:left;" class="user disabled">
                <span class="material-symbols-rounded">person</span> @ViewBag.user
            </li>

        </ul>


        <div class="main">
            <h1 class="header">รายละเอียด order</h1>

            <!-- สี่เหลี่ยมใหญ่ๆ กลางจอ -->
            <div class="foodList">
                @{
                    int sum = 0;
                    string tmp = ViewBag.orderDesc;
                    string[] foodarray = tmp.Split('\n');
                }
                @foreach (string order in foodarray)
                {
                    string[] s = order.Split('|');
                    sum += Int32.Parse(s[2]);
                    <div class="foodCard">
                        <img src="@s[3]" alt="">
                        <p class="resName">@s[0]</p>
                        <p class="foodName">@s[1]</p>
                        <p class="cost">฿@s[2]</p>

                    </div>
                    <div class="line"></div>
                }


            </div>

            <!-- กรอกข้อมูลผู้ฝาก -->
            <div class="detailSubmitRow">
                <div class="detail">
                    <p class="deHead">ข้อมูลผู้สั่ง</p>

                    <div class="row">
                        <p class="formHeader">ชื่อ :</p>
                        <p class="text" style="margin-left: 120px;">@ViewBag.customer</p>
                    </div>

                    <div class="row">
                        <p class="formHeader">เบอร์โทร :</p>
                        <p class="text" style="margin-left: 50px;">@ViewBag.tel</p>
                    </div>

                    <div class="row">
                        <p class="formHeader">จุดรับอาหาร :</p>
                        <p class="text" style="margin-left: 8px;">@ViewBag.place</p>
                    </div>
                </div>

                <div class="submitRow" onclick="finished()">
                    <p class="total">รวม: @sum.-</p>
                    <button class="submit" onclick="finished()">
                        <span class="material-symbols-rounded send">
                            assignment_turned_in
                        </span> จบงาน
                    </button>
                    <script>
                        function finished() {
                            $.ajax({
                                url: "/Home/finishedOrder",
                                type: "POST",
                                data: {},
                                success: function () {
                                    window.location.href = "/Home/CustomerInfo";
                                }
                            });
                        }
                    </script>
                </div>
            </div>

        </div>
    </div>
</body>
</html>

